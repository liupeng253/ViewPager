<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hyman="http://schemas.android.com/apk/res/com.liupeng.viewpager"
    android:orientation="vertical" >

    <com.liupeng.view.ViewPagerIndicator 
        android:id="@+id/id_indcator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/back"
        hyman:visible_tab_count="4"
        >

        <TextView
            android:id="@+id/pager1"
            style="@style/pager"
            android:text="页面1" />

        <TextView
            android:id="@+id/pager2"
            style="@style/pager"
            android:text="页面2" />

        <TextView
            android:id="@+id/pager3"
            style="@style/pager"
            android:text="页面3" />
        <TextView
            android:id="@+id/pager4"
            style="@style/pager"
            android:text="页面4" />

        <TextView
            android:id="@+id/pager5"
            style="@style/pager"
            android:text="页面5" />

        <TextView
            android:id="@+id/pager6"
            style="@style/pager"
            android:text="页面6" />
        <TextView
            android:id="@+id/pager7"
            style="@style/pager"
            android:text="页面7" />

        <TextView
            android:id="@+id/pager8"
            style="@style/pager"
            android:text="页面8" />

        <TextView
            android:id="@+id/pager9"
            style="@style/pager"
            android:text="页面9" />
        
    </com.liupeng.view.ViewPagerIndicator>
    <android.support.v4.view.ViewPager
        android:id="@+id/id_ViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#00f"
        >

        
        
    </android.support.v4.view.ViewPager>



</LinearLayout>
